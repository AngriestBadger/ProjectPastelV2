@model dynamic

@{

    List<Project> projectsList = new List<Project>();
    List<GroupPreferences> preferencesList = new List<GroupPreferences>();

    /*
    foreach (var item in Model)                     // Populating the projectsList from the Model
    {
        string lines = "";
        lines += item.SponsorName + ": ";
        lines += item.Title;

        projectsList.Add(lines);
    }
    */

    // Manual allocation of SponsorName: Title
    projectsList.Add(new Project("PMC Chatbot", 1));
    projectsList.Add(new Project("Shearwater Phriendly Phishing", 1));
    projectsList.Add(new Project("Twitter Crawler - CDJLM Solutions", 2));
    projectsList.Add(new Project("Building Vulnerable Windows - Macht Technologies", 1));
    projectsList.Add(new Project("ATO AI Testing", 1));

    // Populating preferencesList manually, because fuck MVC
    // There are currently 31 groups and only 17 projects, so many doubles
    preferencesList.Add(new GroupPreferences("Team Alpha",
        "PMC Chatbot",
        "Shearwater Phriendly Phishing",
        "Twitter Crawler - CDJLM Solutions"));
    preferencesList.Add(new GroupPreferences("Business Inc.",
        "PMC Chatbot",
        "Building Vulnerable Windows - Macht Technologies",
        "Shearwater Phriendly Phishing"));
    preferencesList.Add(new GroupPreferences("ABC Industries",
        "ATO AI Testing",
        "Twitter Crawler - CDJLM Solutions",
        "PMC Chatbot"));
    preferencesList.Add(new GroupPreferences("Need a Little Time TM.",
        "Shearwater Phriendly Phishing",
        "ATO AI Testing",
        "PMC Chatbot"));
    preferencesList.Add(new GroupPreferences("JJMM",
        "Twitter Crawler - CDJLM Solutions",
        "Shearwater Phriendly Phishing",
        "PMC Chatbot"));
    preferencesList.Add(new GroupPreferences("PPLT",
        "Shearwater Phriendly Phishing",
        "PMC Chatbot",
        "Twitter Crawler - CDJLM Solutions"));
}



<div class="row">
    <div class="col-md-3 col-md-offset-3 col-sm-5 col-sm-offset-1 col-xs-5 col-xs-offset-1">
        <h2>List of Projects</h2>
        <br />
        <br />
        <br />
        @{
            for (int i = 0; i < projectsList.Count; i++)
            {
                string lines = projectsList.ElementAt(i).Title;
                <p>@lines</p>
            }
        }
    </div>

    <div class="col-md-4 col-md-offset-1 col-sm-5 col-xs-5">
        <h2>List of Group <br /> Preferences</h2>
        <br />
        @{
            for (int i = 0; i < preferencesList.Count; i++)
            {
                string lines = preferencesList.ElementAt(i).GroupName;
                <p>@lines</p>
            }
        }


    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-2 col-sm-5 col-sm-offset-1 col-xs-5 col-xs-offset-1">
        <div class="mainPageButton" onclick="@("window.location.href='" + Url.Action("Index", "SponsoredProjects") + "'");">
            <h1>All Projects</h1>
            <h2>Review submitted projects here.</h2>
        </div>
    </div>
    <div class="col-md-4 col-sm-5 col-xs-5">
        <div class="mainPageButton" onclick="@("window.location.href='" + Url.Action("PreferencesList", "Home") + "'");">
            <h1>Group Preferences</h1>
            <h2>View all group preferences here.</h2>
        </div>
    </div>
</div>
