@model ProjectPastelV2.Models.SponsoredProject

@{
    ViewData["Title"] = "Create";
}
<div class="parallax_scrolling">
    <div class="dark_background">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
                <div class="oxygen">
                    <h1>Project Pastel</h1>
                    <h2>Submit a Project</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectDate" class="control-label"></label>
                <input asp-for="ProjectDate" class="form-control" value="@DateTime.Now.ToString()" readonly />
                <span asp-validation-for="ProjectDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SponsorName" class="control-label"></label>
                <input asp-for="SponsorName" class="form-control" />
                <span asp-validation-for="SponsorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacts" class="control-label"></label>
                <textarea asp-for="Contacts" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Contacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InScope" class="control-label"></label>
                <textarea asp-for="InScope" class="form-control" rows="5"></textarea>
                <span asp-validation-for="InScope" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutOfScope" class="control-label"></label>
                <textarea asp-for="OutOfScope" class="form-control" rows="5"></textarea>
                <span asp-validation-for="OutOfScope" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillRequirements" class="control-label"></label>
                <textarea asp-for="SkillRequirements" class="form-control" rows="10"></textarea>
                <span asp-validation-for="SkillRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelatedProjects" class="control-label"></label>
                <textarea asp-for="RelatedProjects" class="form-control" rows="3"></textarea>
                <span asp-validation-for="RelatedProjects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamSize" class="control-label"></label>
                <input asp-for="TeamSize" class="form-control" />
                <span asp-validation-for="TeamSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
 
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home Page</a>
</div>

